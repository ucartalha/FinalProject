@{
    ViewData["Title"] = "Departman Bazlı Performans";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/personnalTracking/TrackingStyle.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="~/js/personnalTracking/performanceByDepartment.js"></script>
}

<div class="container mt-4">
    <h2>Departman Bazlı Performans</h2>

    <div class="row mt-3">
        <div class="col-md-3">
            <label>Departman</label>
            <select id="departmentSelect" class="form-control">
                <option value="">Tümü</option>
                <!-- JS ile dolacak -->
            </select>
        </div>

        <div class="col-md-2">
            <label>Başlangıç Tarihi</label>
            <input type="date" id="startDate" class="form-control" />
        </div>

        <div class="col-md-2">
            <label>Bitiş Tarihi</label>
            <input type="date" id="endDate" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Grafik Tipi</label>
            <select id="chartType" class="form-control">
                <option value="chartjs">Chart.js</option>
                <option value="google">Google Charts</option>
            </select>
        </div>

        <div class="col-md-2 d-grid">
            <label>&nbsp;</label>
            <button id="btnFilter" class="btn btn-success">
                <i class="fa fa-search"></i> Sorgula
            </button>
        </div>
    </div>

    <hr />

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <i class="fa fa-smile fa-3x"></i>
                    <h4 id="GetCustomerAmountByStatutrue" class="mt-2">-</h4>
                    <span>Toplam Çalışma Saati</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <i class="fa fa-users fa-3x"></i>
                    <h4 id="GetCustomerAmount" class="mt-2">-</h4>
                    <span>Çalışan Kişi Sayısı</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <i class="fa fa-clock fa-3x"></i>
                    <h4 id="GetDiscountAmount" class="mt-2">-</h4>
                    <span>Ortalama Çalışma Saati</span>
                </div>
            </div>
        </div>
    </div>

    <!-- CHART SECTION -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Günlere Göre Ofis/VPN Sayısı
                </div>
                <div class="card-body">
                    <div id="chartContainer">
                        <canvas id="departmentChart" height="100"></canvas>
                        <div id="department_chart_div" style="display:none; width:100%; height:500px;"></div>
                        <div class="text-center mt-2" style="display:none;" id="chartPager">
                            <button id="prevButton" class="btn btn-secondary btn-sm me-2">← Önceki</button>
                            <button id="nextButton" class="btn btn-secondary btn-sm">Sonraki →</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- PERFORMANCE TABLE -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Çalışanların Performansı
                </div>
                <div class="card-body">
                    <table id="performanceTable" class="table table-striped table-bordered w-100">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Toplam Saat</th>
                                <th>Ofis Saat</th>
                                <th>VPN Saat</th>
                                <th>Geç Kalma</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- JS ile dolacak -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- TOP EMPLOYEES -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    En Çok Çalışan 5 Kişi
                </div>
                <div class="card-body">
                    <table id="employeeTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>İsim Soyisim</th>
                                <th>Toplam Çalışma Saati</th>
                                <th>Hafta İçi</th>
                                <th>Hafta Sonu</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- JS ile dolacak -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
