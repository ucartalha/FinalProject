<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PersonnalWEB</title>

    <!-- ===== CSS (global) ===== -->
    <!-- Bootstrap 5.3.7 CSS + SRI -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
          crossorigin="anonymous" />

    <!-- İkonlar / proje stil dosyaları -->
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)  @* Sayfa-özel CSS *@
</head>
<body>

    @await Html.PartialAsync("_MainMenu")

    <div class="container">
        @RenderSection("Breadcrumbs", required: false)
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">&copy; 2025 – PersonnalWEB – <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>

    <!-- ===== JS (global) ===== -->
    <!-- 1) jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- 2) Bootstrap JS bundle (Popper dâhil) – sürüm CSS ile aynı -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"></script>

    <!-- 3) Projenizin global JS’i -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- 4) Sayfa-özel betikler (DataTables, Select2, moment vs.) -->
    @RenderSection("Scripts", required: false)
</body>
</html>
